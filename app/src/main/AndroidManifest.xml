<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >
    <!-- Permissões do aplicativo -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FOODTECH"
        tools:targetApi="31" >
        <activity
            android:name=".PaymentResultActivity"
            android:exported="false" />
        <activity
            android:name=".PaymentProcessingActivity"
            android:exported="false" />
        <activity
            android:name=".SuporteCliente"
            android:exported="false" />
        <activity
            android:name=".AreadeConfirmacao"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.Cadastro"
            android:exported="true" /> <!-- Acessível externamente -->
        <activity
            android:name=".view.Home"
            android:exported="true" /> <!-- Ajustado para true, pois deve ser acessível ao iniciar -->
        <activity
            android:name=".view.Pedidos"
            android:exported="true" /> <!-- Mantenha como false se não for acessível externamente -->
        <activity
            android:name=".view.PaymentArea"
            android:exported="false" />
    </application>

</manifest>